mixin socials(mod)
    ul(class="socials socials--" + mod)
        li.socials__item
            a.socials__link.socials__link--instagram(href="#" aria-label="Инстаграм")
                +icon("insta", "socials__icon socials__icon--instagram", width="26", height="26")
        li.socials__item
            a.socials__link.socials__link--vkontakte(href='#' aria-label="В контакте")
                +icon("vk", "socials__icon socials__icon--vkontakte", width="30", height="30")
        li.socials__item
            a.socials__link.socials__link--github(href="#" aria-label="Гитхаб")
                +icon("github", "socials__icon socials__icon--github", width="27", height="27")