mixin skill-circle(mod)
    .skill-circle
        svg.skill-circle__percentage-ratio(viewbox='0 0 100 100' preserveaspectratio='none' width='155' height='155')
            defs
                lineargradient#gradient(x1='65%' y1='75%' x2='100%' y2='100%')
                    stop(offset='0%' style='stop-color: #5500f2')
                    stop(offset='50%' style='stop-color: #8b00ef')
            circle.skill-circle__under(cx='50' cy='50' r='43')
            circle(class="skill-circle__above skill-circle__above--" + mod)(cx='50' cy='50' r='43' stroke="url(#gradient)")