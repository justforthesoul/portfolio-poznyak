.works {
  padding-top: 155px;
}

.works__title {
  text-align: left;
  font-size: 36px;
  line-height: 48px;
  font-weight: 700;
  padding-left: 8.85%;
}

.works__wrapper {
  display: flex;
  padding-left: 8.85%;
  padding-top: 85px;
}

.works__slider-background {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  background-color: #182329;
}

.works__background-img {
  position: absolute;
  width: 100%;
  height: 100%;
}

.works__slider-number {
  position: absolute;
  top: -50px;
  right: -165px;
  font-size: 400px;
  font-weight: 900;
  z-index: -1;
  color: #f5f6f7;
}

.works__slider {
  margin-top: 5px;
  display: flex;
  flex-wrap: wrap;
  position: relative;
  width: 976px;
  height: 550px;
  box-sizing: border-box;
}

.works__slider-list {
  margin-left: auto;
  margin-top: auto;
}

.works__slider-item {
  position: relative;
}

.works__slider-link {
  outline: none;
}

.works__slider-link:focus:before,
.works__slider-link:hover:before  {
  content: "";
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  outline: 3px solid #5500f2;
  background-color: rgba(#5500f2, 0.3);
  z-index: 1;
}

