.popap-menu {
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
    background-color: #fff;
    width: 320px;
    height: 100%;
    display: none;
    @include desktop {
    display: block;
  }
  @include tablets {
    width: 100%;
    display: flex;
    justify-content: center;
    padding-right: 40px;
  }
}

.js-hidden {
 display: none;
}