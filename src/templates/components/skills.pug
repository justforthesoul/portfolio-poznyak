script(type="text/x-template")#skills-list
    ul.skills(ref="skill-container")
        li.skills__item(v-for="skill in skills")
            row(
                :skill="skill"
            )

script(type="text/x-template")#skills-row
    .skills-row
        h3.skills-row__title {{skill.skillsGroup}}
        ul.skills-row__list
            li.skills-row__item(v-for="(skillPercent, skillName) in skill.skills")
                skill(
                :skillName="skillName",
                :skillPercent="skillPercent"
            )

script(type="text/x-template")#skill
    .skill
        svg.skill__circle-shape(viewBox="0 0 100 100" preserveAspectRatio="none")
            circle.skills__circle.skill-circle__under(cx="50" cy="50" r="43")
            circle.skills__circle.skill-circle__above(cx="50" cy="50" r="43" ref="circle" stroke="url(#gradient)" transform='rotate(180 50 50)')
            linearGradient#gradient(x1="65%" y1="75%" x2="100%" y2="100%")
                stop(offset="0%" style="stop-color: #5500f2")
                stop(offset="50%" style="stop-color: #8b00ef")
        .skill__circle-text {{skillName}}        